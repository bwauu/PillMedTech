    <p>
      <label asp-for="EmployeeID" class="text-black"></label><span class="text-danger">*</span>
      <input asp-for="EmployeeID">
    </p>
    <p>
      <label asp-for="HomeFrom" class="text-black"></label><span class="text-danger">*</span>
      <input asp-for="HomeFrom">
    </p>
    <p>
      <label asp-for="HomeUntil" class="text-black"></label><span class="text-danger">*</span>
      <input asp-for="HomeUntil">
    </p>
    <p>
      <input type="submit" class="btn" value="Skicka in">
    </p>
  </form>
</main>