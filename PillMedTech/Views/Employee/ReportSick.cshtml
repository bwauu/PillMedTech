@model SickErrand

<nav>
  <p>
    <a asp-controller="Employee" asp-action="StartEmployee">Sjukanmälan</a> / <strong>Sjuk med intyg</strong>
    <a asp-controller="Account" asp-action="Logout" class="right">Logga ut</a>
